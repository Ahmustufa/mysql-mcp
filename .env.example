# MySQL Database Configuration
# Copy this file to .env and update with your actual values

# Required: Database Connection Settings
DB_SERVER=localhost
DB_DATABASE=testdb
DB_USER=root
DB_PASSWORD=rootpassword

# Optional: Database Connection Settings
DB_PORT=3306

# SSL Configuration
# Set to 'false' to disable SSL completely
# Leave undefined or set to 'Amazon RDS' for AWS RDS SSL support
DB_SSL=false

# For AWS RDS MySQL Example:
# DB_SERVER=your-rds-instance.region.rds.amazonaws.com
# DB_DATABASE=your_database
# DB_USER=admin
# DB_PASSWORD=your_secure_password
# DB_PORT=3306
# # DB_SSL will automatically use 'Amazon RDS' for SSL

# For Google Cloud SQL Example:
# DB_SERVER=your-cloud-sql-ip
# DB_DATABASE=your_database
# DB_USER=your_user
# DB_PASSWORD=your_password
# DB_PORT=3306
# DB_SSL=false

# Development vs Production
NODE_ENV=development
